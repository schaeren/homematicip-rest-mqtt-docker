{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Remote Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        },
        {
            "name": "Python Debugger: main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "src/main.py",
            "justMyCode": false,
            "args": [
                "--hmip_config_file",     "demo/secrets/hmip_access.ini",
                "--server",               "raspi6",
            ],
            "env": {
                "MQTT_PORT": "8883",
                "MQTT_USERNAME": "mqtt_explorer",
                // "MQTT_PASSWORD": "**********",
                "MQTT_PASSWORD_FILE": "demo/secrets/mqtt_broker_password.txt",
                "MQTT_CA_CERT_FILE": "demo/secrets/certs/ca/ca.crt",
                "MQTT_CLIENT_CERT_FILE": "demo/secrets/certs/hmip2mqtt/client.crt",
                "MQTT_CLIENT_KEY_FILE": "demo/secrets/certs/hmip2mqtt/client.key",
                // "MQTT_DISABLE_SERVER_CERT": "true",
                "MQTT_BASE_TOPIC": "hmip_ug",
            },
            "console": "integratedTerminal"
        }
    ]
}